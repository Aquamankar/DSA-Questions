     public static boolean isPalindrom(String  s){
             int left=0, right=s.length()-1;
           while(left<=right){
            if(s.charAt(left) == s.charAt(right)){
                left++;
                right--;
                continue;
            }
            else{
                return false;
            }
        }
        return true;
     }
}

